# Set close connexion header when $http_upgrade is empty, upgrade else
map $http_upgrade $connection_upgrade {
    default upgrade;
    '' close;
}

server {
	listen 80;
	
	# reverse proxy to orthanc
	location /orthanc/ {
		rewrite /orthanc(.*) $1 break;
		proxy_pass http://orthanc:8042;
		proxy_set_header Host $http_host;
		proxy_request_buffering off;
		proxy_max_temp_file_size 0;
		client_max_body_size 0;
	}

	# reverse proxy to the liveshare server (standard Rest API)
 	location /orthanc/osimis-viewer/liveshare/ {
 		rewrite /orthanc/osimis-viewer/liveshare(.*) $1 break;
 		proxy_pass http://liveshare:3000;
 		proxy_set_header Host $http_host;
 		proxy_request_buffering off;
 		proxy_max_temp_file_size 0;
 		client_max_body_size 0;
 	}

	# reverse proxy to the liveshare server (for websocket requests)
	# This regex work with /socket.io, because socket.io clients point
	# that prefix by default
	# See http://stackoverflow.com/questions/29043879/socket-io-with-nginx.
	location /socket.io {
	  proxy_set_header X-Real-IP $remote_addr;
	  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	  proxy_set_header Host $http_host;

	  proxy_pass http://liveshare:3000;
	  proxy_redirect off;

	  proxy_http_version 1.1;
	  proxy_set_header Upgrade $http_upgrade;
	  proxy_set_header Connection $connection_upgrade;
	} 	
}